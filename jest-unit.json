{
  "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
  ],
  "transform": {
      "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": ".*\\.spec\\.ts$",
  "collectCoverageFrom": [
      "packages/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
  ],
  "coverageReporters": [
      "json",
      "lcov"
  ]
}